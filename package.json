{
	"name": "julia-debug",
	"displayName": "Judy",
	"version": "0.0.23",
	"publisher": "JudyTeam",
	"description": "A debugger for Julia Programming Language",
	"author": {
		"name": "Microsoft Corporation",
		"email": "v-manlsh@microsoft.com"
	},
	"license": "MIT",
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.29.0",
		"node": "^8.9.3"
	},
	"icon": "images/judy.png",
	"categories": [
		"Debuggers"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/judy-vscode/Judy.git"
	},
	"bugs": {
		"url": "https://github.com/judy-vscode/Judy/issues"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {
		"await-notify": "1.0.1",
		"json-rpc-protocol": "^0.13.1",
		"net": "^1.0.2",
		"node-ipc": "^9.1.1",
		"vscode-debugadapter": "1.32.1"
	},
	"devDependencies": {
		"@types/node": "8.9.3",
		"@types/mocha": "5.2.5",
		"typescript": "3.1.6",
		"mocha": "5.2.0",
		"vscode": "1.1.21",
		"vscode-debugadapter-testsupport": "1.32.0",
		"tslint": "5.11.0",
		"vsce": "1.53.0"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug",
		"onCommand:extension.julia-debug.getProgramName"
	],
	"contributes": {
		"breakpoints": [
			{
				"language": "julia"
			}
		],
		"debuggers": [
			{
				"type": "judy",
				"label": "Judy",
				"program": "./out/debugAdapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a text file.",
								"default": "${workspaceFolder}/${command:AskForProgramName}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": false
							},
							"console": {
                                "enum": [
                                    "none",
                                    "integratedTerminal",
                                    "externalTerminal"
                                ],
                                "description": "Where to launch the debug target: internal console, integrated terminal, or external terminal.",
                                "default": "integratedTerminal"
                            },
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "judy",
						"request": "launch",
						"name": "Ask for file name",
						"program": "${workspaceFolder}/${command:AskForProgramName}",
						"stopOnEntry": false,
						"console": "integratedTerminal"

					}
				],
				"configurationSnippets": [
					{
						"label": "Judy: Launch",
						"description": "A new configuration for 'debugging' a user selected julia file.",
						"body": {
							"type": "judy",
							"request": "launch",
							"name": "Ask for file name",
							"program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
							"stopOnEntry": false,
							"debugServer": 4711
						}
					}
				],
				"variables": {
					"AskForProgramName": "extension.julia-debug.getProgramName"
				}
			}
		]
	}
}
